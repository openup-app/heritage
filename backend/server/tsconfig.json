{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "ES2022",
    "module": "ES2022",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "built",
    ".eslintrc.js"
  ]
}